{
    "name": "myvendor/solicitudes-module",
    "description": "Módulo PHP desacoplado para gestión de solicitudes. Compatible con Laravel, Symfony y PHP puro.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "module",
        "solicitudes",
        "clean-architecture",
        "hexagonal",
        "ddd",
        "laravel",
        "symfony"
    ],
    "authors": [
        {
            "name": "Tu Nombre",
            "email": "tu@email.com"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "suggest": {
        "illuminate/database": "Para usar el repositorio Eloquent (Laravel)",
        "illuminate/support": "Para usar el Service Provider de Laravel",
        "doctrine/orm": "Para usar el repositorio Doctrine (Symfony)",
        "symfony/framework-bundle": "Para usar el Bundle de Symfony"
    },
    "autoload": {
        "psr-4": {
            "SolicitudesModule\\": "src/",
            "SolicitudesModule\\Adapters\\Laravel\\": "adapters/laravel/",
            "SolicitudesModule\\Adapters\\Symfony\\": "adapters/symfony/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SolicitudesModule\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse src --level=8",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "SolicitudesModule\\Adapters\\Laravel\\SolicitudesModuleServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
